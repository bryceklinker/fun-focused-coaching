  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
